---
import "@picocss/pico";
import "/src/global.css";

import Nav from "$com/Nav.astro";
import Footer from "$com/Footer.astro";

if (!Astro.cookies.has("theme")) {
  Astro.cookies.set("theme", "dark", {
    maxAge: 315360000,
    path: "/",
  });
}

const theme = Astro.cookies.get("theme")?.value || "dark";

const {
  title: _title,
  article,
  publishedOn,
  image = "/images/placeholder.webp",
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);

const navTitle = "Fallenblogs";
const description =
  "I am Fallen and this is where I share my amazing tech learning experience.";

const title = _title ? `${_title} â€¢ ${navTitle}` : navTitle;
---

<html lang="en" data-theme={theme}>
  <head>
    <meta charset="utf-8" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <meta name="description" content={description} />
    <meta name="author" content="Fallen | Rishav" />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content={article ? "article" : "website"} />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={image} />
    {
      article && (
        <>
          <meta property="article:author" content="Fallen | Rishav" />
          <meta property="article:published_time" content={publishedOn} />
        </>
      )
    }

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={Astro.url} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={image} />

    <title>{title}</title>
  </head>
  <body>
    <Nav title={navTitle} theme={theme} />

    <main class="container">
      <slot />
    </main>

    <Footer />
  </body>
</html>
