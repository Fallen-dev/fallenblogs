---
import Link from "@/Link.astro";
const { links, author } = Astro.props;

interface Props {
  author: string;
  links: Array<{ href: string; name: string }>;
}

const year = new Date().getFullYear();
---

<article data-unset>
  <div class="container" style="text-align: center;">
    <strong>
      Made with <a
        href="http://astro.build"
        target="_blank"
        rel="noopener noreferrer">Astro</a
      >
    </strong>

    <div id="footer-links">
      {links.map(({ href, name }) => <Link {href}>{name}</Link>)}
      <a
        href="http://github.com/Fallen-dev"
        target="_blank"
        rel="noopener noreferrer"
        data-nounderline>My GitHub</a
      >
    </div>

    <p>
      &copy;&nbsp;{year}&nbsp;{author}. All rights reserved.
    </p>
  </div>
</article>

<style>
  article {
    margin: 0;
    border-radius: 0;
    background-color: var(--footer-color);
  }

  strong {
    display: block;
    margin-bottom: var(--typography-spacing-vertical);
  }

  article p {
    margin-block: var(--typography-spacing-vertical) 0;
  }
</style>
