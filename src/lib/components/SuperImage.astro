---
type Props = {
  src: any;
  width: string | number;
  height?: string | number;
  loading?: "lazy" | "eager";
  alt?: string;
  class?: string;
};

import { getImage, Picture } from "astro:assets";

const {
  src,
  width,
  height,
  loading = "eager",
  alt = "Just an image",
  class: className,
} = Astro.props;

const phdl_img = await getImage({
  src,
  width: 4,
});
---

<Picture
  {alt}
  {src}
  {loading}
  width={+width}
  height={Number(height)}
  style={`background-image: url(${phdl_img.src});`}
  formats={["avif", "webp"]}
  pictureAttributes={{ class: className }}
/>

{
  Astro.slots.has("default") && (
    <figcaption class="content">
      <slot name="default" />
    </figcaption>
  )
}

<style>
  picture {
    background-color: var(--md-sys-color-surface-variant);
    overflow: hidden;
  }

  img {
    display: block;
    margin-inline: auto;
  }

  figcaption {
    margin-bottom: var(--margin-bottom);
    font-size: var(--fs-small);
    color: var(--md-sys-color-secondary);
  }
</style>
