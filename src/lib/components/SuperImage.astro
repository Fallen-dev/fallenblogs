---
type Props = {
  src: any;
  width: string | number;
  height?: string | number;
  loading?: "lazy" | "eager";
  alt?: string;
  figcaption?: string;
};

import { getImage, Picture } from "astro:assets";

const {
  src,
  width,
  height,
  loading = "eager",
  alt = "Just an image",
  figcaption,
} = Astro.props;

const phdl_img = await getImage({
  src,
  width: 4,
});
---

<Picture
  {alt}
  {src}
  {loading}
  width={+width}
  height={Number(height)}
  style={`background-image: url(${phdl_img.src});`}
  formats={["avif", "webp"]}
/>

{figcaption && <figcaption set:html={figcaption} />}

<style>
  picture {
    width: 600px;
    height: 400px;
    background-color: var(--md-sys-color-surface-variant);
  }

  picture img {
    width: 100%;
    height: 100%;
  }

  picture,
  img {
    background-repeat: no-repeat;
    background-size: cover;
  }

  figcaption {
    font-size: 0.95rem;
    color: var(--md-sys-color-secondary);
  }
</style>
