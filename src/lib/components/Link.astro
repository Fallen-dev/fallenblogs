---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, role, ...props } = Astro.props;

const { pathname } = Astro.url;
const active =
	pathname === href || (pathname.startsWith("/blog/") && href === "/blog");
---

<a href={href} class:list={[className, { active }]} {...props} data-nounderline>
	<slot />
</a>

<style>
	a.active {
		font-weight: 700;
		color: var(--primary);
		text-decoration: underline;
	}
</style>
